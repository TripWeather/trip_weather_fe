<!DOCTYPE html>
<html>
  <head>
    <title>TripWeatherFe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      margin: 10;
      font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
      position: relative;
      overflow: hidden;
      background-color: #4B0082;
    }

    .topnav a {
      float: left;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 17px;
    }

    .topnav a:hover {
      background-color: #ddd;
      color: black;
    }

    .topnav a.active {
      background-color: #00BFFF;
      color: white;
    }

    .topnav-centered a {
      float: none;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .topnav-right {
      float: right;
    }

      @media screen and (max-width: 600px) {
        .topnav a, .topnav-right {
          float: none;
          display: block;
        }
        
        .topnav-centered a {
          position: relative;
          top: 0;
          left: 0;
          transform: none;
        }
      }
    </style>

      <div class="topnav"> <!-- Top navigation -->

      <div class="topnav-centered"> <!-- Centered link -->
        <a href="#TripWeather" class="active">TripWeather</a>
      </div>
      
      <% if current_user.nil? %>
        <%= link_to 'Home', root_path %> <!-- Left-aligned links (default) -->
      <% else %>
        <%= link_to 'Home', dashboard_path %> <!-- Left-aligned links (default) -->
      <% end %>

      <div class="topnav-right"> <!-- Right-aligned links -->
      <% if current_user.nil? %>
        <%= link_to "Log In", login_path %>
      <% else %>
        <%= link_to "Log Out", logout_path, method: "delete" %>
      <% end %>
      </div>

    </div>
  </head>

  <body>

  <!DOCTYPE html>
<html>

  <body>
    
    <% flash.each do |type, message| %>
        <div class="custom-alert">
          <center><%= message %></center>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
